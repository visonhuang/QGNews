<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:src="@drawable/login_user" />

        <EditText
            android:id="@+id/forget_user"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="UserName"
            android:inputType="textWebEmailAddress"
            android:maxLength="50"/>

        <ImageView
            android:id="@+id/forget_user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="33dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/forger_user_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="#ee1c2b"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:src="@drawable/login_password"/>

        <EditText
            android:id="@+id/forget_password_Edit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="20"/>

        <ImageView
            android:id="@+id/forget_password_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="33dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/forget_password_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="#ee1c2b"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/forget_number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="输入验证码"
            android:inputType="number" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">

            <Button
                android:id="@+id/forget_number_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="#424d5e"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="33dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">

            <Button
                android:id="@+id/forget_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确认修改"
                android:textSize="20sp"
                android:textColor="#424d5e"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>